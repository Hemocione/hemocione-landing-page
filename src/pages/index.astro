---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Home/Hero.astro";
import WhoWeAre from "../components/Home/WhoWeAre.astro";
import OurImpact from "../components/Home/OurImpact.astro";
import CallToAction from "../components/Home/CallToAction.astro";
import HowWorks from "../components/Home/HowWorks.astro";
import NextEvents from "../components/Home/NextEvents.astro";
import Feedbacks from "../components/Home/Feedbacks.astro";
import Partners from "../components/Home/Partners.astro";
import CallToActionPartners from "../components/Home/CallToActionPartners.astro";
import FAQ from "../components/Home/FAQ.astro";
import BecomeVolunteer from "../components/Home/BecomeVolunteer.astro";
---

<Layout title="Lading Page">
	<main id="main" transition:animate="fade">
		<Hero />
		<WhoWeAre />
		<OurImpact />
		<CallToAction />
		<HowWorks />
		<NextEvents />
		<Feedbacks />
		<Partners />
		<CallToActionPartners />
		<FAQ />
		<BecomeVolunteer />
	</main>
</Layout>

<style>
	#main {
		display: flex;
		flex-direction: column;
		gap: 6rem;
	}

	@media (max-width: 768px) {
		#main {
			gap: 3rem;
		}
	}
</style>
