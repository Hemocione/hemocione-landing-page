---
import barsSVG from "../assets/icons/bars.svg";
---

<header>
    <nav class="container">
        <h3>Hemocione</h3>
        <input type="checkbox" id="hamburger-menu" hidden />
        <label for="hamburger-menu" class="hamburger-label">
            <img
                src={barsSVG.src}
                class="hamburger-menu"
                width="25"
                height="25"
            />
            <div class="overlay"></div>
        </label>
        <ol class="nav-list">
            <li><a href="/">Inicio</a></li>
            <li><a href="/eventos">Eventos</a></li>
            <li><a href="/competicoes">Competições</a></li>
        </ol>
    </nav>
</header>

<style>
    header {
        height: var(--navbar-height);
    }

    nav {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: space-between;
        z-index: 5;
    }

    nav li a:hover,
    nav li a:focus {
        color: var(--hemo-color-primary);
    }

    .nav-list {
        list-style-type: none;
        display: inline-flex;
        gap: 1rem;
        z-index: 2;
    }

    .hamburger-menu {
        display: none;
    }
    .overlay {
        visibility: hidden;
        opacity: 0;
        position: fixed;
        top: 0;
        right: 0;
        height: 100dvh;
        width: 100vw;
        background-color: rgba(0, 0, 0, 0.4);
        z-index: 1;

        transition:
            visibility 0.3s,
            opacity 0.3s;
    }

    #hamburger-menu:checked ~ .nav-list {
        right: 0;
        visibility: visible;
    }
    #hamburger-menu:checked ~ .nav-list li a:hover {
        color: var(--hemo-color-text-primary);
    }

    #hamburger-menu:checked ~ .hamburger-label .overlay {
        visibility: visible;
        opacity: 1;
    }

    @media screen and (max-width: 768px) {
        .nav-list {
            visibility: hidden;
            display: flex;
            flex-direction: column;
            position: fixed;
            top: 0;
            right: -50%;
            height: 100dvh;
            background-color: var(--hemo-color-primary-light);
            padding: 1rem 2rem;
            gap: 1rem;
            margin: 0;

            transition:
                right 0.3s,
                visibility 0.3s;
        }

        .hamburger-menu {
            display: block;
        }
    }
</style>
