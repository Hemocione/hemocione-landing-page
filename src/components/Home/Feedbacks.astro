import Title from "../Title.astro";
import FeedbacksSlider, { type Item } from "./FeedbacksSlider.vue";

const ITEMS: Item[] = [
    {
        kind: "image",
        size: "small",
        src: "https://cdn.discordapp.com/attachments/962841359243444224/1217272206544080976/row-2-card-32x.jpg?ex=66036c15&is=65f0f715&hm=0960ad2c5a4f08c896c1469cc96e6982f9048163f3d66b0dca44d3a68ffa5cf4&",
